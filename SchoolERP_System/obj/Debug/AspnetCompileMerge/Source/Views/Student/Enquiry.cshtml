
@{
    ViewBag.Title = "Enquiry";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}



<style>
    .m-b-10 {
        margin-bottom: 10px;
    }

    .m-t-10 {
        margin-top: 10px;
    }

    .modal-header {
        background: rgb(240, 188, 180);
    }

    i.fa {
        color: black;
        font-size: 16px;
        margin-right: 5px;
        cursor: pointer;
    }
</style>

<div class="row" id="div_Scroll">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span class="pull-left">View Enquiry</span>
                <button class="btn btn-default pull-right openModal m-t-10">Add Enquiry</button>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-body">
                        @Html.Partial("~/Views/Shared/SuccessError.cshtml")
                        <table class="table table-striped table-bordered table-hover table-condensed dt-responsive" id="tblMapping">
                            <thead>
                                <tr>
                                    <th>Class</th>
                                    <th>Date</th>
                                    <th>Student Name</th>
                                    <th>Phone</th>
                                    <th>Type</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdId" value="0" />
<div class="modal fade" id="Modal" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 750px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Add/Update Enquiry:</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("~/Views/Shared/Modal_SuccessError.cshtml")
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Type:<span style="color:red;">*</span></label>
                            <select id="ddlTypeList" class="form-control">
                                <option value="0">Select</option>
                                <option value="Phone">Phone</option>
                                <option value="Walking">Walking</option>
                                <option value="WebSite">WebSite</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Date:<span style="color:red;">*</span></label>
                            <input type="text" class="form-control dateFormat" id="txtdate">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Student Name:<span style="color:red;">*</span></label>
                            <input type="text" class="form-control" id="txtStudentName">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Gender:<span style="color:red;">*</span></label>
                            <select id="ddlGenderList" class="form-control">
                                <option value="0">Select</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>DOB:</label>
                            <input type="text" class="form-control dateFormat" id="txtDOB">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Father Name:</label>
                            <input type="text" class="form-control" id="txtFatherName">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="text" class="form-control" id="txtEmail">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Mobile:<span style="color:red;">*</span></label>
                            <input type="text" class="form-control Numeric" id="txtMobile" maxlength="10">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Class:<span style="color:red;">*</span></label>
                            @Html.DropDownList("ddlClassList", (IList<SelectListItem>)ViewBag.ClassList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Next Follow Date:</label>
                            <input type="text" class="form-control dateFormat" id="txtNextFollowDate">
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Next Follow Up Note:</label>
                            <input type="text" class="form-control" id="txtNextFollowUpNote">
                        </div>
                    </div>
                </div>
                <div style=" background-color: #F9F2F2;">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Follow Up Date:</label>
                                <input type="text" class="form-control dateFormat" id="txtFollowUpDate">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Messege:</label>
                                <select id="ddlMessegeList" class="form-control">
                                    <option value="0">Select</option>
                                    <option value="WRONG NUMBER">WRONG NUMBER</option>
                                    <option value="WILL BE JOINING LATER">WILL BE JOINING LATER</option>
                                    <option value="NOT INTERESTED">NOT INTERESTED</option>
                                    <option value="NOW INTERESTED FOR NOW">NOW INTERESTED FOR NOW</option>
                                    <option value="JOINED COMPETETOR">JOINED COMPETETOR</option>
                                    <option value="CALL BACK LATER">CALL BACK LATER</option>
                                    <option value="FEES TOO HIGH">FEES TOO HIGH</option>
                                    <option value="COURSE TOO LENGTHY">COURSE TOO LENGTHY</option>
                                    <option value="NOT RESPONDING">NOT RESPONDING</option>
                                    <option value="NOT RESPONDING">OTHERS</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Follow Up Remarks:</label>
                                <input type="text" class="form-control" id="txtRemarks">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-warning" style="margin-top: 20px;" id="btnAdd">Add</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel-body">

                                <table class="table table-striped table-bordered table-hover table-condensed dt-responsive" id="tbladd">
                                    <thead>
                                        <tr>
                                            <th>Follow Up Date</th>
                                            <th>Messege</th>
                                            <th>Follow Up Remarks</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section body_scripts{


    <script type="text/javascript">
        $(document).ready(function () {
            fn_Bindtbl("0", "Select");
            $("#ddlClassList").select2({
                placeholder: "Select"
            });
            $("#ddlMessegeList").select2({
                placeholder: "Select"
            });
            $("#ddlGenderList").select2({
                placeholder: "Select"
            });
            $("#ddlTypeList").select2({
                placeholder: "Select"
            });
        });

        $(document).on("click", ".openModal", function () {
            HideSuccErrDiv();
            ModalHideSuccErrDiv();
            fn_resetform();
            $("#Modal").modal();
        });

        $(document).on("click", ".Iconeditclass", function () {
            var _Id = $(this).attr('data-ID');
            $("#hdId").val(_Id);
            fn_Bindtbl(_Id, "SelectByID");
        });
        $(document).on("click", ".IconAdmclass", function () {
            var _EId = $(this).attr('data-ID');
            var url = '@Url.Action("StudentRegistration", "Student", new { _EId = "__EId__" })';
            window.location.href = url.replace('__EId__', _EId);
        });
        
        $(document).on("click", "#btnAdd", function () {

            var _txtFollowUpDate = $('#txtFollowUpDate').val();
            var _txtRemarks = $('#txtRemarks').val();
            var data = $('#ddlMessegeList').select2('data')[0]['text'];
            if (_txtFollowUpDate == '') {
                ModalPopupError("Please enter Follow Up Date.", "Error", "M_errorBlock");
                return false;
            }
            if (data == 'Select' || data == "0") {
                ModalPopupError("Please select Type.", "Error", "M_errorBlock");
                return false;
            }

            var markup = '<tr><td>' + _txtFollowUpDate + '</td><td>' + data + '</td><td>' + _txtRemarks + '</td><td><i class="fa fa-trash-o Icondelclassadd"></i></td></tr>';
            $("#tbladd >tbody").append(markup);

            fn_resetAdd();
        });
        $(document).on("click", ".Icondelclass", function () {
            if (confirm("Are you sure want to delete?")) {
                var _Id = $(this).attr('data-ID');
                fn_del(_Id);
            }
        });
        $(document).on("click", ".Icondelclassadd", function () {
            if (confirm("Are you sure want to delete?")) {
                $(this).closest('tr').remove();
            }
        });
        $(document).on("click", "#btnSave", function () {

            var _Id = $.trim($("#hdId").val());
            var _ddl1 = $('#ddlClassList').val();
            var _ddl2 = $('#ddlTypeList').val();
            var _ddl3 = $('#ddlGenderList').val();
            var _txtdate = $("#txtdate").val();
            var _txtStudentName = $("#txtStudentName").val();
            var _txtDOB = $("#txtDOB").val();
            var _txtFatherName = $("#txtFatherName").val();
            var _txtEmail = $("#txtEmail").val();
            var _txtMobile = $("#txtMobile").val();
            var _txtNextFollowDate = $("#txtNextFollowDate").val();
            var _txtNextFollowUpNote = $("#txtNextFollowUpNote").val();


            if (_ddl2 == '' || _ddl2 <= 0) {
                ModalPopupError("Please select Type.", "Error", "M_errorBlock");
                return false;
            }
            if (_txtdate == '') {
                ModalPopupError("Please enter Date.", "Error", "M_errorBlock");
                return false;
            }
            if (_txtStudentName == '') {
                ModalPopupError("Please enter Student Name.", "Error", "M_errorBlock");
                return false;
            }

            if (_ddl3 == '' || _ddl3 <= 0) {
                ModalPopupError("Please select Gender.", "Error", "M_errorBlock");
                return false;
            }
            if (_txtMobile == '') {
                ModalPopupError("Please enter Mobile Number.", "Error", "M_errorBlock");
                return false;
            }
            if (_ddl1 == '' || _ddl1 <= 0) {
                ModalPopupError("Please select Class.", "Error", "M_errorBlock");
                return false;
            }

            if ($('#tbladd >tbody >tr').length == 0) {
                ModalPopupError("Please add Follow up!", "Error", "M_errorBlock");
                return false;
            }
            var _Datadt = [];
            $('#tbladd > tbody > tr').each(function () {
                var v1 = $(this).find('td:eq(0)').text();
                var v2 = $(this).find('td:eq(1)').text();
                var v3 = $(this).find('td:eq(2)').text();
                _Datadt.push({
                    'FollowUpDate': v1, 'Messege': v2, 'Remarks': v3
                });
            });

            $.ajax({
                type: "POST",
                url: '@Url.Action("saveEnquiry", "Student")',
                data: JSON.stringify({
                    EnquiryID: _Id, E_Type: _ddl2, Gender: _ddl3, ClassID: _ddl1, E_Date: _txtdate, StudentName: _txtStudentName, DOB: _txtDOB, FatherName: _txtFatherName, Email: _txtEmail, Mobile: _txtMobile, NextFollowDate: _txtNextFollowDate, NextFollowUpNote: _txtNextFollowUpNote, Datadt: _Datadt
                }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                cache: false,
                success: function (response) {
                    if (response == "InsertSuccessful") {
                        fn_resetform();
                        fn_resetAdd();
                        ModalPopupError("Data Inserted successfully.", "Success", "M_errorBlock");
                        fn_Bindtbl("0", "Select");
                    }
                    else if (response == "UpdateSuccessful") {
                        fn_resetform();
                        fn_resetAdd();
                        ModalPopupError("Data updated successfully.", "Success", "M_errorBlock");
                        fn_Bindtbl("0", "Select");
                    }
                    else {
                        alert("Error. Try again latet.");
                        return false;
                    }
                },
                error: function (error) {
                    console.error(error);
                    //FormSuccessError(error, "Error", "errorBlock");
                    return false;
                }
            });
        });


        function fn_Bindtbl(_Id, Type) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("viewEnquiry", "Student")',
                data: JSON.stringify({ Id: _Id, Type: Type }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                cache: false,
                success: function (data) {
                    if (Type == "Select") {
                        $('#tblMapping tbody').empty();
                        $.each(data, function (rowIndex, val) {
                            var row = '';
                            row += '<tr>';
                            row += '<td>' + val.ClassName + '</td>';
                            row += '<td>' + val.E_Date + '</td>';
                            row += '<td>' + val.StudentName + '</td>';
                            row += '<td>' + val.Mobile + '</td>';
                            row += '<td>' + val.E_Type + '</td>';
                            row += '<td><i class="fa fa-edit Iconeditclass" data-ID="' + val.EnquiryID + '"></i><i class="fa fa-trash-o Icondelclass" data-ID="' + val.EnquiryID + '"></i><i class="fa fa-user-plus IconAdmclass" data-ID="' + val.EnquiryID + '"></i></td>';
                            row += '</tr>';
                            $('#tblMapping tbody').append(row);

                        });
                        $('#tblMapping').dataTable();
                    }

                    if (Type == "SelectByID") {
                        $('#btnSave').text("Update");
                        $('#txtFeeHead').val(data[0].FeeHeadName);
                        $('#txtFeeInstallment').val(data[0].Total_of_Installment);

                        $('#ddlClassList').select2("val", data[0].ClassID);
                        $('#ddlTypeList').select2("val", data[0].E_Type);
                        $('#ddlGenderList').select2("val", data[0].Gender);
                        $("#txtdate").val(data[0].E_Date);
                        $("#txtStudentName").val(data[0].StudentName);
                        $("#txtDOB").val(data[0].DOB);
                        $("#txtFatherName").val(data[0].FatherName);
                        $("#txtEmail").val(data[0].Email);
                        $("#txtMobile").val(data[0].Mobile);
                        $("#txtNextFollowDate").val(data[0].NextFollowDate);
                        $("#txtNextFollowUpNote").val(data[0].NextFollowUpNote);
                        for (var i = 0; i < data.length; i++) {
                            var markup = '<tr><td>' + data[i].FollowUpDate + '</td><td>' + data[i].Messege + '</td><td>' + data[i].Remarks + '</td><td><i class="fa fa-trash-o Icondelclass"></i></td></tr>';
                            $("#tbladd >tbody").append(markup);
                        }
                        $("#Modal").modal();
                        HideSuccErrDiv();
                        ModalHideSuccErrDiv();
                    }
                },
                error: function (error) {
                    console.error(error);
                    //FormSuccessError(error, "Error", "errorBlock");
                    return false;
                }
            });
        }

        function fn_del(Id) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("deleteEnquiry", "Student")',
                data: JSON.stringify({ Id: Id }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                cache: false,
                success: function (response) {
                    if (response == "deleteSuccessful") {
                        fn_Bindtbl("0", "Select");
                        FormSuccessError("Data deleted successfully.", "Success", "errorBlock");
                        //alert("Class deleted successfully.");
                    }
                    else {
                        alert("Error. Try again latet.");
                        return false;
                    }
                },
                error: function (error) {
                    console.error(error);
                    //FormSuccessError(error, "Error", "errorBlock");
                    return false;
                }
            });
        };
        function fn_resetAdd() {
            $("#txtFollowUpDate").val('');
            $("#txtRemarks").val('');
            $('#ddlMessegeList').select2("val", '');
        }
        function fn_resetform() {
            $("#hdnId").val('0');
            $('#ddlClassList').select2("val", '');
            $('#ddlTypeList').select2("val", '');
            $('#ddlGenderList').select2("val", '');
            $("#txtdate").val('');
            $("#txtStudentName").val('');
            $("#txtDOB").val('');
            $("#txtFatherName").val('');
            $("#txtEmail").val('');
            $("#txtMobile").val('');
            $("#txtNextFollowDate").val('');
            $("#txtNextFollowUpNote").val('');
            $('#tbladd tbody').empty();
            $('#btnSave').text("Save");
        }
    </script>
}





