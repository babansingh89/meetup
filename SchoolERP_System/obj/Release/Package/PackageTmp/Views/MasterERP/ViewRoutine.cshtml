
@{
    ViewBag.Title = "View Routine";
}
<style>
    .trigger-btn {
        display: inline-block;
        margin: 100px auto;
    }

    .btn-group, .btn-group-vertical {
        padding: 2px;
    }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }



    a:not([href]):not([tabindex]) {
        color: inherit;
        text-decoration: none;
    }



    a, button {
        outline: 0 !important;
    }
    .btn {
        cursor:none!important;
    }
  
</style>
<div class="row" id="div_Scroll">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span class="pull-left">View Routine</span>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-body">
                        @Html.Partial("~/Views/Shared/SuccessError.cshtml")
                        <div id="stlist" class="row">
                            <div class="col-lg-12">
                                <div class="panel-body">
                                    <div ID="dvContents">
                                        <table id="tblMapping" class="table table-striped table-bordered table-centered mb-0">
                                            <tbody></tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section body_scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $('#tblMapping tbody').empty();
            fn_Bindtbl("SelectByTeacher");
        });

        function fn_Bindtbl(_type) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("viewRoutineForTeacher", "MasterERP")',
                data: JSON.stringify({ Type: _type }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                cache: false,
                success: function (data) {
                    $('#tblMapping tbody').empty();
                    var row = '';
