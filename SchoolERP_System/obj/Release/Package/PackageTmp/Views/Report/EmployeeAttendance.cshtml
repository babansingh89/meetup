            //}
            //if (_ddlSectionList == '' || _ddlSectionList <= 0) {
            //    FormSuccessError1("Please select Section.", "Error", "errorBlock", "div_Scroll");
            //    return false;
            //}

            @*$.ajax({
                type: "POST",
