            background-color: #7c9fd5; /* Optional: Add background color for better visibility */
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.50); /* Adding shadow */
            /*margin: 20px auto; */ /* Center the div horizontally */
        }

        input.ggg.lgn,
        input.ggg.pc,
        select.droplogin {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 6px; /* Rounded corners */
            box-sizing: border-box;
             background-color: white; /* Set background color to white */
            color: black; /* Text color */
        }

        #btnLogin {
            width: 100%;
            padding: 10px;
            background: linear-gradient(to right, #f9d29d, #f7b78a); /* Light gradient colors */
            border: none;
            color: #0000009e;
            font-weight: bold;
            font-size: 16px;
            cursor: pointer;
            border-radius: 10px; /* Add rounded corners */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Optional shadow */
            transition: background 0.3s ease-in-out;
        }

            #btnLogin:hover {
                background: linear-gradient(to right, #f7b78a, #f9d29d); /* Reverse light gradient on hover */
            }

        .fixed-bottom-footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            z-index: 1000; /* Ensures it stays on top of other content */
        }

        .footer-right {
            margin-left: auto; /* Pushes the content to the right side */
            color: white;
            font-weight: 500;
        }

        .welcome-title {
            font-size: 2.5rem; /* Large font size */
            font-weight: bold; /* Bold text */
            color: #00ffb8a3; /* Attractive color */
            text-align: center; /* Center the text */
            margin-bottom: 10px; /* Space below the title */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        }

        .education-subtitle {
            font-size: 1.5rem; /* Slightly smaller font size */
            color: #666; /* Gray color */
            text-align: center; /* Center the text */
            margin-bottom: 20px; /* Space below the subtitle */
            font-style: italic; /* Italicize the text */
        }

        input::placeholder {
            color: gray !important; /* Set to gray */
            opacity: 1; /* Ensure full opacity */
        }

        input::-webkit-input-placeholder {
            color: gray !important;
            /* For WebKit browsers */
        }

        input::-moz-placeholder {
            color: gray !important; /* For Firefox 19+ */
        }

        input:-ms-input-placeholder {
            color: gray !important; /* For IE */
        }

        input:-moz-placeholder {
            color: gray !important; /* For Firefox 18- */
        }
    </style>

</head>
